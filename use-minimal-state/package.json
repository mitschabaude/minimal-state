  },
  "devDependencies": {
    "@types/react": ">=16.8.0",
    "esbuild": "^0.8.50",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "minimal-state": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
